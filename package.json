{
  "name": "it-nodues-clearance-system",
  "version": "2.0.0",
  "description": "Enhanced IT No-Dues Clearance System with Smart Session Management, Email OTP Authentication, Real-time Notifications, and Comprehensive History Tracking",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-deps": "npm install",
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "setup": "npm install && npm run create-dirs && npm run create-env",
    "create-dirs": "mkdir -p data public/certificates public/certificates/temp public/certificates/archive uploads",
    "create-env": "echo 'Creating .env template...' && cp .env.example .env || echo 'Please create .env file manually'",
    "backup-data": "tar -czf backup-$(date +%Y%m%d-%H%M%S).tar.gz data/ uploads/",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "clearance",
    "nodues",
    "otp",
    "authentication",
    "email-otp",
    "employee-management",
    "clearance-system",
    "express",
    "nodemailer",
    "session-management",
    "real-time-notifications",
    "websocket",
    "history-tracking",
    "certificate-management",
    "smart-dashboard",
    "automated-cleanup",
    "data-preservation"
  ],
  "author": "IT Department",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.2.0",
    "helmet": "^8.1.0",
    "html-pdf": "^3.0.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.14.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/it-nodues-clearance.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/it-nodues-clearance/issues"
  },
  "homepage": "https://github.com/yourusername/it-nodues-clearance#readme",
  "config": {
    "server_port": "3000",
    "websocket_port": "8081",
    "session_cleanup_schedule": "0 2 * * *",
    "form_archive_days": "7"
  },
  "funding": {
    "type": "institutional",
    "url": "https://your-institution.edu"
  }
}
